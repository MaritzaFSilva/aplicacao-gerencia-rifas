
<%= simple_form_for @raffle do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :user_id %>
    <%= f.association :type_id %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :probable_draw_date %>
    <%= f.input :sale_start_date %>
    <%= f.input :sale_end_date %>
    <%= f.input :draw_date %>
    <%= f.input :ticket_value %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, f.object.new_record? ? 'Criar Raffle' : 'Atualizar Raffle', class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
