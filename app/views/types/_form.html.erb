
<%= simple_form_for @type do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :description %>
    <%= f.input :initial_number %>
    <%= f.input :step %>
    <%= f.input :number_of_tickets %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, f.object.new_record? ? 'Criar Tipo' : 'Atualizar Tipo', class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
